{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@imcotton/sri",
  "version": "0.8.2",
  "license": "MIT",
  "lock": false,
  "imports": {
    "@std/encoding": "jsr:@std/encoding@1",
    "valibot": "jsr:@valibot/valibot@1"
  },
  "tasks": {
    "dev": "deno run -E -R --allow-run npm:esbuild@0.25.3 src/app.ts --bundle --format=esm --packages=external --outdir=pages --servedir=pages",
    "build": "rm -rf ./dist && ./tools/build.ts",
    "serve": {
      "dependencies": [ "build" ],
      "command": "deno run -N -R=./dist jsr:@std/http@1/file-server ./dist"
    },
    "test": "deno test --allow-net --allow-read ./tests"
  },
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "strict": true
  },
  "publish": {
    "include": [
      "deno.json",
      "LICENSE.txt",
      "README.md",
      "./tests",
      "./src"
    ],
    "exclude": [
      "node_modules/",
      ".git/",
      ".vscode/",
      ".github/"
    ]
   },
  "exports": {
    ".": "./src/mod.ts",
    "./main": "./src/main.ts"
  }
}
